<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <EditText
        android:id="@+id/edit_email"
        android:layout_width="256dp"
        android:layout_height="38dp"
        android:hint="Email"
        android:layout_marginTop="@dimen/dp_128"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"

        />
    <EditText
        android:hint="Password"
        android:id="@+id/edt_register"
        android:layout_width="256dp"
        android:layout_height="38dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@id/edit_email"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:hint="Displayname"
        android:id="@+id/displayname"
        android:layout_width="256dp"
        android:layout_height="38dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@id/edt_register"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/displayname"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_signup"
        app:layout_constraintRight_toLeftOf="@id/btn_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_48"
        android:background="@drawable/custom_button"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:text="Signup"


        />
    <Button
        android:layout_marginHorizontal="@dimen/dp_40"
        android:background="@drawable/custom_button"
        android:layout_marginRight="@dimen/dp_48"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/displayname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_signup"
        android:id="@+id/btn_cancel"
        android:text="CANCEL"
        />

</android.support.constraint.ConstraintLayout>